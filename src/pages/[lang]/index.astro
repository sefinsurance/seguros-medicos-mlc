
---
import Banner from "../../components/ui/Banner.astro";
export async function getStaticPaths(){
  return [{params:{lang:"es"}},{params:{lang:"en"}}];
}
const { lang } = Astro.params;
const common = lang==="en"
  ? (await import("../../i18n/en/common")).common
  : (await import("../../i18n/es/common")).common;
---
<html lang={lang}>
<head>
  <style is:global>
    @import "../../styles/tokens.css";
    @import "../../styles/landing.css";
  </style>
</head>
<body>
  <Banner eyebrow="MLC Insurance" title={lang==="en"?"Health Coverage Made Simple":"Seguro médico sin complicaciones"}
    body={lang==="en"?"Free eligibility check in minutes.":"Verificación gratuita en minutos."}>
    <a href="#form">{common.cta.qualify}</a>
  </Banner>
</body>
</html>
