---
import SiteShell from "../../components/layout/SiteShell.astro";
import Banner from "../../components/ui/Banner.astro";
import Faq from "../../components/ui/Faq.astro";

export async function getStaticPaths(){
  return [{params:{lang:"es"}},{params:{lang:"en"}}];
}
const { lang } = Astro.params;
const labels = lang==="en" ? (await import("../../i18n/en/common")).labels : (await import("../../i18n/es/common")).labels;
const data = lang==="en" ? (await import("../../i18n/en/medicare")).medicare : (await import("../../i18n/es/medicare")).medicare;
---
<SiteShell lang={lang} labels={labels} title={`MLC Insurance | ${data.hero.title}`}>
  <Banner eyebrow={data.hero.eyebrow} title={data.hero.title} body={data.hero.body}>
    <button class="btn primary" type="button" onclick="window.__openLeadModal()">{labels.form.title}</button>
    <a class="btn ghost" href={`/${lang}/`}>{labels.nav.home}</a>
  </Banner>

  <section class="section">
    <div class="container">
      <h2 class="h2" style="margin:0 0 12px">{data.bulletsTitle}</h2>
      <ul style="margin:0;padding-left:18px;line-height:1.7;color:var(--text2)">
        {data.bullets.map((b)=>(<li>{b}</li>))}
      </ul>
    </div>
  </section>

  <Faq title={data.faqTitle} items={data.faqs} />
</SiteShell>
