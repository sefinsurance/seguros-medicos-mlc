
---
const { lang, t } = Astro.props;
const other = lang === "es" ? "en" : "es";
const path = Astro.url.pathname.replace(/^\/(es|en)/, "");
const switchHref = `/${other}${path || "/"}`;
---
<header class="topbar">
  <div class="container">
    <div class="topbar-inner">
      <div class="brand">MLC Insurance</div>
      <nav class="nav" aria-label="Primary">
        <a href={`/${lang}/#home`}>{t.nav.home}</a>
        <a href={`/${lang}/#services`}>{t.nav.services}</a>
        <a href={`/${lang}/#faq`}>{t.nav.faq}</a>
        <a class="langbtn" href={switchHref}>{other.toUpperCase()}</a>
      </nav>
    </div>
  </div>
</header>
