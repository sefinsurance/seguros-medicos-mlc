---
const { eyebrow, title, body } = Astro.props;
---
<section class="section dark">
  <div class="container">
    <div class="kicker">
      {eyebrow && <div class="pill">{eyebrow}</div>}
      <h1 class="h1" style="margin:12px 0 10px">{title}</h1>
      {body && <p class="p" style="margin:0 0 18px">{body}</p>}
      <div class="actions"><slot /></div>
    </div>
  </div>
</section>

<style>
.actions{display:flex;gap:12px;flex-wrap:wrap}
</style>
